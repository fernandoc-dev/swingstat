#!/bin/sh


echo "=== Alembic Menu ==="
echo "1) revision (autogenerate)"
echo "2) upgrade (to head)"
read -p "Selecciona una opci칩n [1-2]: " option

case $option in
  1)
    read -p "Mensaje de la revisi칩n: " message
    alembic revision --autogenerate -m "$message"
    ;;
  2)
    alembic upgrade head
    ;;
  *)
    echo "Opci칩n inv치lida."
    ;;
esac
